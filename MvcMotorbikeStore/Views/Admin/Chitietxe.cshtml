@model MvcMotorbikeStore.Models.XEGANMAY

@{
    ViewBag.Title = "Chitietxe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT XE</h2>

<div>
    @*<h4>XEGANMAY</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên xe: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenXe)
        </dd>

        <dt>
            Giá bán: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Giaban) VNĐ
        </dd>

        <dt>
            Mô tả: 
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Ảnh bìa: 
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Anhbia)*@
            <img src="@Url.Content("~/hinhsanpham/"+ Model.Anhbia)" width="120px" />
        </dd>

        <dt>
            Ngày cập nhật: 
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Ngaycapnhat)*@
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng tồn: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Loại xe: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAIXE.TenLoaiXe)
        </dd>

        <dt>
            Nhà phân phối: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHAPHANPHOI.TenNPP)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("ĐIỀU CHỈNH", "Suaxe", new { id = Model.MaXe }) |
    @Html.ActionLink("TRỞ VỀ", "Xe")
</p>
