@model MvcMotorbikeStore.Models.XEGANMAY

@{
    ViewBag.Title = "Xoaxe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN XE CẦN XÓA</h2>

<h3>Bạn quyết định xóa xe này?</h3>
<div>
    @*<h4>XEGANMAY</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên xe:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenXe)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Giaban)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Anhbia)*@
            <img src="@Url.Content("~/hinhsanpham/"+ Model.Anhbia)" width="120px" />
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Ngaycapnhat)*@
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat) VNĐ
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Loại xe:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLX)
        </dd>

        <dt>
            Nhà phân phối:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNPP)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ", "Xe")
        </div>
    }
</div>
